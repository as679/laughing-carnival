# Create an OSEv3 group that contains the masters, nodes, and etcd groups
[OSEv3:children]
masters
nodes
etcd

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
openshift_additional_repos=[{'id': 'centos-paas', 'name': 'centos-paas', 'baseurl' :'https://buildlogs.centos.org/centos/7/paas/x86_64/openshift-origin311', 'gpgcheck' :'0', 'enabled' :'1'}]
openshift_http_proxy=http://{{ hostvars['jumpbox.lab']['privateIp'] }}:3128/
openshift_https_proxy=http://{{ hostvars['jumpbox.lab']['privateIp'] }}:3128/
openshift_no_proxy='.lab'
openshift_generate_no_proxy_hosts=True
openshift_disable_check=disk_availability,docker_storage
#openshift_node_bootstrap=false
openshift_release="3.11"
openshift_pkg_version="-3.11.0"
openshift_image_tag="v3.11.0"

openshift_node_dnsmasq_additional_config_file=/opt/openshift-ansible/dnsmasq-snippet.conf

# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=root

# If ansible_ssh_user is not root, ansible_become must be set to true
#ansible_become=true

openshift_deployment_type=origin

# uncomment the following to enable htpasswd authentication; defaults to AllowAllPasswordIdentityProvider
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider'}]

# host group for masters
[masters]
server1.lab

# host group for etcd
[etcd]
server1.lab

# host group for nodes, includes region info
[nodes]
server1.lab openshift_schedulable=true openshift_hostname=server1.lab openshift_node_group_name='node-config-master'
server2.lab openshift_hostname=server2.lab openshift_node_group_name='node-config-infra'
server3.lab openshift_hostname=server3.lab openshift_node_group_name='node-config-infra'
server4.lab openshift_hostname=server4.lab openshift_node_group_name='node-config-compute'
server5.lab openshift_hostname=server4.lab openshift_node_group_name='node-config-compute'
